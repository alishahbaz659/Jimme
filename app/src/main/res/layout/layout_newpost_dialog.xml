<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_shape">

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="New post"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/txtpostitle"
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_below="@id/details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/edtitext_zeroborder"
        android:hint="Post title"
        android:paddingLeft="10dp"
        android:textColor="#000000"></EditText>

    <EditText
        android:id="@+id/txtpostdesc"
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_below="@id/txtpostitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/edtitext_zeroborder"
        android:hint="Description"
        android:paddingLeft="10dp"
        android:textColor="#000000"></EditText>

    <EditText
        android:id="@+id/locationenter"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_below="@id/txtpostdesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/edtitext_zeroborder"
        android:editable="false"
        android:hint="Location"
        android:paddingLeft="10dp"
        android:textColor="#000000"></EditText>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_below="@+id/locationenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnaddnewpost"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_round_transparent"
        android:text="Add"
        android:textColor="#000000"></Button>

</RelativeLayout>