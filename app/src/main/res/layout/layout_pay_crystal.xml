<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_shape">

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Pay Crystal"
        android:textColor="#000000"
        android:textSize="19dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txtpostitle"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_below="@id/details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/edtitext_zeroborder"
        android:hint="Post title"
        android:paddingLeft="10dp"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/txtpostdesc"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_below="@id/txtpostitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/edtitext_zeroborder"
        android:hint="Description"
        android:paddingLeft="10dp"
        android:textColor="#000000"></TextView>

    <Button
        android:id="@+id/btnaddnewpost"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtpostdesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_round_transparent"
        android:text="Add"
        android:textColor="#000000"></Button>

</RelativeLayout>