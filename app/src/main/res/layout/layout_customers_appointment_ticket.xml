<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="0"
        android:background="@drawable/ticket"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dob1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Saturday"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="7-8 AM: "
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="8-9 AM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="9-10 AM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="10-11 AM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="11-12 AM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="12-1 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t6"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="1-2 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="2-3 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t8"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="3-4 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t9"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="4-5 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="5-6 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/t12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t11"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:text="6-7 PM:"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sevenToeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/eightTonine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sevenToeight"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/nineToten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eightTonine"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/tenToeleven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nineToten"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/elevenTotweleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tenToeleven"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/twelveToone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elevenTotweleve"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/oneTotwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/twelveToone"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/twoTothree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oneTotwo"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/threeTofour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/twoTothree"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/fourTofive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/threeTofour"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/fiveTosix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fourTofive"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

            <TextView
                android:id="@+id/sixeToseven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fiveTosix"
                android:layout_marginTop="9dp"
                android:text="N/A"
                android:textColor="#fff"></TextView>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
